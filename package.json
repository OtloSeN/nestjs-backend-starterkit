{
  "name": "nestjs-backend-starterkit",
  "version": "1.0.0",
  "description": "This repository contains minimal appropriate set of technologies for the quickest start of backend for a new project",
  "author": "Dmytro Rychyk (dimarichik@gmail.com)",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "node dist/app",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:docker-services": "docker-compose -f docker/docker-compose.services.yml up",
    "lint": "eslint \"{src,lib,tests}/**/*.ts\" --fix",
    "test": "npm run migration:up:test && jest --runInBand --config ./tests/jest.config.json",
    "test:coverage": "npm run test -- --coverage",
    "typeorm-cli": "npx ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:create": "npm run typeorm-cli -- migration:create",
    "migration:up": "npm run typeorm-cli -- migration:run -d ./src/domain/dataSource",
    "migration:down": "npm run typeorm-cli -- migration:revert -d ./src/domain/dataSource",
    "migration:up:test": "cross-env NODE_ENV=test npm run migration:up",
    "migration:down:test": "cross-env NODE_ENV=test npm run migration:down",
    "worker:create-admin": "node -r ts-node/register -r tsconfig-paths/register worker CreateAdmin",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.1",
    "@aws-sdk/s3-request-presigner": "^3.658.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "commander": "^12.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "fast-redact": "^3.5.0",
    "handlebars": "^4.7.8",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.3",
    "nodemailer": "^6.9.13",
    "nodemailer-stub-transport": "^1.1.0",
    "object-path": "^0.11.8",
    "reflect-metadata": "^0.2.0",
    "typeorm": "^0.3.20",
    "typeorm-transactional": "^0.5.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@stylistic/eslint-plugin": "^1.7.0",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.5",
    "@types/luxon": "^3.4.2",
    "@types/mjml": "^4.7.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-plugin-align-import": "^1.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-more": "^1.0.5",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm-transactional-tests": "^2.0.0",
    "typescript": "^5.1.3"
  }
}
